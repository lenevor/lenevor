{
	"name": "lenevor/lenevor",
	"type": "project",
	"description": "The Lenevor Framework.",
	"keywords": ["syscodes","lenevor"],
	"license": "BSD-3-Clause",
	"homepage": "https://lenevor.com",
	"support": {
		"wiki": "https://github.com/lenevor/lenevor/wiki",
		"source": "https://github.com/lenevor"
	},
	"authors": [
		{
			"name": "Alexander Campo",
			"email": "jalexcam@gmail.com"
		}
	],
	"require": {
		"php": "^8.2"
	},
	"scripts": {
		"setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php prime key:generate"
        ],
		"post-create-project-cmd": [
			"@php -r \"file_exists('.env') || copy('.env.exmple', '.env');\"",
			"@php prime key:generate"
		],		
		"post-update-cmd": [
			"@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
			"@php prime key:generate"
		]
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}